/**
 * @file Firestore Security Rules for Bhumy - AI-Powered Circular Waste Management App
 * @core_philosophy This ruleset enforces a strict user-ownership model for private user data and allows public read access for certain collections (rewards, articles).
 * @data_structure User-specific data is nested under /users/{userId}, while public data resides in top-level collections.
 * @key_security_decisions User listing is disallowed. Public collections are readable by all.  Writes to user-owned data are restricted to the owning user.
 * @denormalization None yet. Future collaboration features may require denormalization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {bool} - True if the user is signed in and the UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is signed in.
     * @return {bool} - True if the user is signed in (request.auth is not null).
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the resource exists and the request is made by the owner.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {bool} - True if the resource exists, the user is signed in, and the UID matches the provided userId.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     *   - request.auth.uid: 'user123'
     *   - request.resource.data.id: 'user123'
     * @allow (get) User with ID 'user123' can read their profile.
     *   - request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     *   - request.auth.uid: 'user456'
     *   - request.resource.data.id: 'user123'
     * @deny (update) User with ID 'user456' cannot update the profile of 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing users is not permitted

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for waste scans under a user's profile.
     * @path /users/{userId}/wasteScans/{wasteScanId}
     * @allow (create) User with ID 'user123' can create a waste scan record.
     *   - request.auth.uid: 'user123'
     * @allow (get) User with ID 'user123' can read their waste scan record.
     *   - request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a waste scan record for 'user123'.
     *   - request.auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update a waste scan record of 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
     */
    match /users/{userId}/wasteScans/{wasteScanId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for reward information.
     * @path /rewards/{rewardId}
     * @allow (get) Anyone can read reward information.
     * @allow (list) Anyone can list reward information.
     * @deny (create) No one can create a reward.
     * @deny (update) No one can update a reward.
     * @deny (delete) No one can delete a reward.
     * @principle Publicly accessible data with no write permissions.
     */
    match /rewards/{rewardId} {
      allow get: if true;
      allow list: if true;

      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Rules for reward redemptions under a user's profile.
     * @path /users/{userId}/redemptions/{redemptionId}
     * @allow (create) User with ID 'user123' can create a redemption record.
     *   - request.auth.uid: 'user123'
     * @allow (get) User with ID 'user123' can read their redemption record.
     *   - request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a redemption record for 'user123'.
     *   - request.auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update a redemption record of 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
     */
    match /users/{userId}/redemptions/{redemptionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for waste material listings under a user's profile.
     * @path /users/{userId}/listings/{listingId}
     * @allow (create) User with ID 'user123' can create a listing.
     *   - request.auth.uid: 'user123'
     * @allow (get) User with ID 'user123' can read their listing.
     *   - request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a listing for 'user123'.
     *   - request.auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update a listing of 'user123'.
     *   - request.auth.uid: 'user456'
     * @principle Enforces document ownership for writes. Restricts access to a user's own data tree.
     */
    match /users/{userId}/listings/{listingId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for policy scenario simulations.
     * @path /policyScenarios/{policyScenarioId}
     * @allow (get) Anyone can read policy scenarios.
     * @allow (list) Anyone can list policy scenarios.
     * @deny (create) No one can create a policy scenario.
     * @deny (update) No one can update a policy scenario.
     * @deny (delete) No one can delete a policy scenario.
     * @principle Publicly accessible data with no write permissions.
     */
    match /policyScenarios/{policyScenarioId} {
      allow get: if true;
      allow list: if true;

      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Rules for environmental education articles.
     * @path /articles/{articleId}
     * @allow (get) Anyone can read articles.
     * @allow (list) Anyone can list articles.
     * @deny (create) No one can create a article.
     * @deny (update) No one can update a article.
     * @deny (delete) No one can delete a article.
     * @principle Publicly accessible data with no write permissions.
     */
    match /articles/{articleId} {
      allow get: if true;
      allow list: if true;

      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}